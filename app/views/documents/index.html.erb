<h1>Listing documents</h1>

<table>
  <tr>
    <th>Pdf</th>
    <th>Pdf file name</th>
    <th>Pdf content type</th>
    <th>Pdf file size</th>
    <th>Pdf updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.pdf %></td>
    <td><%= document.pdf_file_name %></td>
    <td><%= document.pdf_content_type %></td>
    <td><%= document.pdf_file_size %></td>
    <td><%= document.pdf_updated_at %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

